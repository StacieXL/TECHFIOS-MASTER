// Double array ver. 1
		int[][] numbers = {{1, 2, 3, 4}, {5, 6, 7,}};
		System.out.println("Double Array ver1 value= " + numbers[1][2]); // =7
		System.out.println("Double Array ver1 number of rows = " + numbers.length);
		System.out.println("Double Array ver1 length of row1 = " + numbers[0].length);
		System.out.println("Double Array ver1 length of row2 = " + numbers[1].length);

// Double array ver. 2
		int numbers2[][] = new int[2][4];
		numbers2[0][0] = 1;
		numbers2[0][1] = 2;
		numbers2[0][2] = 3;
		numbers2[0][3] = 4;

		numbers2[1][0] = 5;
		numbers2[1][1] = 6;
		numbers2[1][2] = 7;
		System.out.println("Double Array ver2 value = " + numbers2[1][3]); // =0

// Double array ver. 1 loop thru
		for (int i = 0; i < numbers.length; ++i) {
			for (int j = 0; j < numbers[0].length; ++j) {
				System.out.println("Double Array Any version Loop thru = "+ numbers[i][j]);
			}
		}

