package Topics;
public class Sandbox {
	public static void main(String[] args) {
	
		String string ="How are you doing?";
		char[] b = string.toCharArray();
		System.out.println(b);
		System.out.println("Length of charArray = "+b.length);
		for (int i=0;i<b.length;i++) {
			System.out.println("Index["+i+"] = " +b[i]);
		}
		
		
		System.out.println("===========");
		String[] splitArray = string.split(" ");	
		System.out.println("Length of stringArray = "+splitArray.length);
		for (int j=0;j<splitArray.length;j++) {
			System.out.println("Index["+j+"] = " +splitArray[j]);
		}
		
		
		System.out.println("===========");
		String[] split1 = string.split(" ");	
		System.out.println("Length of stringArray = "+split1.length);
		for (int k=0;k<split1.length;k++) {
			String[] split2 = split1[k].split("o");	
			System.out.println("Index["+k+"] = " +split2[k]);
		}
	}	
}

