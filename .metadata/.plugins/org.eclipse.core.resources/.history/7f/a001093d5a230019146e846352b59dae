// Double array ver. 1
		System.out.println("DOUBLE ARRAY Version 1");
		int[][] ver1 = {{1, 2, 3, 4}, {5, 6, 7,}};
		System.out.println("{ {1, 2, 3, 4}, {5, 6, 7,} };");
		System.out.println("last number is = " + ver1[1][2]); // =7
		System.out.println("number of rows = " + ver1.length);
		System.out.println("length of row1 (column)= " + ver1[0].length);
		System.out.println("length of row2 (column)= " + ver1[1].length);

// Double array ver. 2
		System.out.println();
		System.out.println("DOUBLE ARRAY Version 2");
		int ver2[][] = new int[2][4]; //(2 rows, 4 columns)
		ver2[0][0] = 1;
		ver2[0][1] = 2;
		ver2[0][2] = 3;
		ver2[0][3] = 4;

		ver2[1][0] = 5;
		ver2[1][1] = 6;
		ver2[1][2] = 7;
		System.out.println("last number is = " + ver2[1][2]); // =7

// Double array loop thru
		System.out.println();
		System.out.println("Loop thru ver1");
		for (int i = 0; i < ver1.length; ++i) {
			for (int j = 0; j < ver1[i].length; ++j) { //try i with 0
				System.out.print(ver1[i][j]+ " ");						
			}
		}

		System.out.println();
		System.out.println();
		System.out.println("Loop thru ver2");
		for (int i = 0; i < ver2.length; ++i) {
			for (int j = 0; j < ver2[i].length; ++j) {
				System.out.println(ver2[i][j]+ " ");						
			}
		}

		
		
		
		
	}
}
