package Topics;
import java.util.Scanner;
public class Sandbox2 {
	public static void main(String[] args) {
		
		System.out.println("Enter a number:");	
		Scanner input1 = new Scanner (System.in); 
		double number1 = input1.nextDouble();
		
		System.out.println();
		System.out.println("Enter an operator (+ - x /):");	
		Scanner input2 = new Scanner (System.in);
		char operator = input2.next().charAt(0);
		
		System.out.println();
		System.out.println("Enter another number:");	
		Scanner input3 = new Scanner (System.in); 
		double number2 = input3.nextDouble();
		
		System.out.println();
		System.out.println("Your final calculation is:");
		
		basicFunction();
		addition (number1,number2);
	}
		
	
	
	
	public static void basicFunction () {
		double x = 5;
		double y =6;
		System.out.println(x+y);	
	}
	
	
	public static void addition (double numberX, double numberY) {
			double add = numberX + numberY; 		
			System.out.println(numberX + " + " + numberY + " = " + add);
	}
}
