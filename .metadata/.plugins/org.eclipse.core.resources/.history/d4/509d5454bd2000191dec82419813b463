package Topics;

public class B_IfThen {
	
	public static void main(String[] args) {
		
	    
	    int time = 20;
	    if (time < 18) {
	      System.out.println("Good day.");
	    } else {
	      System.out.println("Good evening.");
	    }
			
		    double BMI = 20.5;					
		    String result;					
		    result = (BMI < 18.5) ? "Under weight"					
	              : (BMI >= 18.5 && BMI <= 24.9) ? "Normal weight"					
	              : (BMI >= 25   &&  BMI <= 29.9) ? "Over wieght"					
	              : (BMI >= 30) ? "Obesity"					
	              : " ";					
				    System.out.println(result);	
}
}