package topics;
public class GlobalVar{	
	static int a = 1;
	static int b = 2;
	int c = 3;
	int d = 4;
	
	public static void main(String[] args) { 
		
		
		sumGlobalStatic (a,b);                        // 1 way
		GlobalVar.sumGlobalNonStatic(c, d);                 // 2 way		
				
	}

	public static void sumGlobalStatic(int num1, int num2) {
		System.out.println(num1 + num2);
	}	
	
	public static void sumGlobalNonStatic(int num1, int num2) {
		System.out.println(num1 + num2);
	}	
}



	